<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag "welcome" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="wrapper">
     <div id="welcome_header">
       <div id="branding">
        <%= nav_link image_tag("surftrottr_large.png"), "site", "index" %>
       </div>

       <div id="login">
         <%= form_for :user do |form| %>

           <div id="input">
             <div class="row">
               <%= render "screen_name_field_row", :form => form %>
             </div>
             <div class="row">
               <%= render "password_field_row", :form => form, :field => "password" %>
             </div>

             <div class="row">
               <label for="remember_me">remember me?</label>
               <%= form.check_box :remember_me, :class => "checkbox" %>
             </div>
             <div class="spacer"></div>
           </div>

           <div id="submit">
             <%= submit_tag "Login", :class => "submit" %>
           </div>
         <% end %>
         <div class="spacer"></div>
       </div>

       <div class="spacer"></div>
     </div>

     <%= yield %>

     <div id="footer">
       <div class="text">
         <span id="copyright">surftrottr (c) 2009</span>
         <span id="links">
           <%= nav_link "FAQ", "site", "faq" %> |
           <%= nav_link "About", "site", "about" %> |
           <%= nav_link "Terms of Use", "site", "terms" %> |
           <%= nav_link "Contact us", "site", "contact" %>
        </span>
      </div>
     </div>
    </div>
  </body>
</html>
