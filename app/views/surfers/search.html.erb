<div class="layout1">
  <div class="main_container">

    <div class="mytab">
      <ul class="tabs">
	    <li><%= link_to "Search", { :controller => 'surfers', :action => 'search' }, :class => 'active' %></li>
      </ul>

      <div class="tabs_content">
      
        <div class="section">
        <%= form_tag({ :action => "search" }, :method => "get") do %>
		    <label for="q">Search for a username, first or last name</label>
		    <%= text_field_tag "q", params[:q], :class => "text" %>
		    <input type="submit" value="Search" class="submit" />
		  <% end %>
		</div>
		
        <div class="section">
		  <div id="results">
					<ul>
					    <% if not @surfers.nil? %>
						  <% if @surfers.length != 0 %>
						    <li class="entry"><b><%= @surfers.length %> result(s)</b></li>
                            <% @surfers.each do |surfer| %>
                                <li class="entry">
								    <%= link_to thumbnail_tag(surfer), surfer_path(surfer.screen_name) %>
								    <%= link_to surfer.screen_name, 
											    surfer_path(surfer.screen_name),
												:title => surfer.screen_name %>
									<% if surfer.user_information.full_name.length != 0 %>
									  (<%= surfer.user_information.full_name %>)
									<% end %>
								</li>
                            <% end %>
						  <% else %>
    		                <li>We couldn't find any record matching your query.</li>
		                  <% end %>
						<% end %>
						<div class="spacer"></div>
					</ul>
			
		  </div>

		</div>
	  
	    <div class="spacer"></div>
      </div>
	</div>

  </div>
</div>
