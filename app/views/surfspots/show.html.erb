<div class="layout2">

  <div class="side_container">
    <%= render "map" %>
    <%= render "nearby_surfspots" %>
    <%= render "surfers" %>
  </div>

  <div class="main_container" id="xsnazzy">

	<%= render :partial => "layouts/xsnazzy_box_top", :locals => { :colors => "white_grey" } %>
	
    <div class="header">
      <%= render :partial => "surfspot_header" %>
    </div>
	
	<div class="body">
	
      <ul id="menu">
        <li><%= link_to "Reports(#{@surfspot.reports.count})", surfspot_path(@surfspot), :class => 'active' %></li>
        <li><%= link_to "Sessions(#{@surfspot.surf_sessions.count})", surfspot_sessions_path(@surfspot.id) %></li>
        <li><%= link_to "Photos(#{@surfspot.photos.length})", surfspot_photos_path(@surfspot.id) %></li>
	  </ul>
  
      <div class="spacer"></div>
	  
	  <div id="new_report">
	  </div>
		
	  <div id="reports">
		      <% if @reports.length != 0 %>
			    <%= render :partial => "reports/report", :collection => @reports, :locals => { :layout => "w_avatar_w_rating", :hide_surfer => false, :hide_surfspot => true, :photo_size => "thumb" } %>
			  <% else %>
			    <br />
			    <span style="font-size: 10pt; padding: 0.5em">
			        No surf report posted yet.
				</span>
			  <% end %>
	  </div>

	  <div id="pagination">
			  <%= will_paginate @reports %>
	  </div>
		
    </div>
	
    <%= render :partial => "layouts/xsnazzy_box_bottom", :locals => { :colors => "white_grey" } %>
  </div>
</div>
