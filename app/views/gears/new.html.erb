<div id="layout1">
  <div id="main_container">
	
	<div class="nav">
      <%= link_to '<< back to gears', gears_path %>
	</div>

    <%= render "shared/error_messages", :target => @gear %>

    <div class="myform">
      <%= form_for @gear, :url => gears_path, :html => { :multipart => true } do |gear_form| %> 
        <h1>Add a new surfing gear</h1>
		<p class="description">Use this form to add a new gear</p>

		<div class="row">
          <label>
		    Type
			<span class="required_field">*</span>
			<span class="description">What type of gear?</span>
		  </label>
		  <%= gear_form.select :category, Gear::VALID_GEAR_TYPES.collect { |type| type.underscore.humanize } %>
		  <div class="spacer"></div>
		</div>

		<div class="row">
		  <label>
		    Name
			<span class="required_field">*</span>
		    <span class="description">e.g. 5.3mm Psycho</span>
		  </label>
	      <%= gear_form.text_area :name, :rows => 1, :cols => 20 %>
		  <div class="spacer"></div>
		</div>

		<div class="row">
		  <label>
		    Brand
		    <span class="description">e.g. O'Neill</span>
		  </label>
	      <%= gear_form.text_area :brand, :rows => 1, :cols => 20 %>
		  <div class="spacer"></div>
		</div>
		
		<div class="row">
		  <label>
		    Description
			<span class="required_field">*</span>
		    <span class="description">A description of the gear, what you like/dislike about it, etc (1000 chars max)</span>
		  </label>
	      <%= gear_form.text_area :description, :rows => 10, :cols => 20 %>
		  <div class="spacer"></div>
		</div>
		
		<div class="row">
		  <label>
		    Link
		    <span class="description">e.g. manufacturer's page</span>
		  </label>
	      <%= gear_form.text_area :link, :rows => 1, :cols => 20 %>
		  <div class="spacer"></div>
		</div>
				
		<div id="photos">
		  <%= gear_form.fields_for :photos do |photo_form| %>
              <div class="row">
                  <%= render :partial => "photos/new",
				             :locals => { :form => photo_form } %>
		          <div class="spacer"></div>
		      </div>
		  <% end %>
		</div>
	
	    <%= submit_tag "Add", :class => "submit" %>
	    <div class="spacer"></div>

    <% end %>
	</div>

  </div>
</div>
